{
  "name": "tidyjs",
  "displayName": "TidyJS",
  "description": "Automatically organizes and formats import declarations",
  "version": "1.6.0",
  "publisher": "Asmir",
  "license": "MIT",
  "icon": "resources/small.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/asmirbe/tidyjs"
  },
  "author": {
    "name": "Asmir"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "type": "module",
  "main": "./dist/extension.js",
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tidyjs.forceFormatDocument",
        "title": "Format Imports",
        "category": "TidyJS"
      },
      {
        "command": "tidyjs.createConfigFile",
        "title": "Create Configuration File",
        "category": "TidyJS"
      },
      {
        "command": "tidyjs.sortProperties",
        "title": "Sort Properties",
        "category": "TidyJS"
      },
      {
        "command": "tidyjs.formatFolder",
        "title": "Format Folder",
        "category": "TidyJS"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "tidyjs.formatFolder",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "TidyJS",
      "properties": {
        "tidyjs.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "tidyjs.groups": {
          "type": "array",
          "default": [
            {
              "name": "Other",
              "order": 0,
              "default": true
            }
          ],
          "description": "Import groups configuration",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Group name"
              },
              "match": {
                "type": "string",
                "description": "Regex pattern to match imports (format: /pattern/flags or pattern)"
              },
              "order": {
                "type": "number",
                "description": "Group order (lower numbers appear first)"
              },
              "default": {
                "type": "boolean",
                "default": false,
                "description": "Whether this group is the default for unmatched imports (only one group should have this set to true)"
              },
              "sortOrder": {
                "description": "Custom sort order for imports within this group",
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "alphabetic"
                    ],
                    "description": "Sort imports alphabetically"
                  },
                  {
                    "type": "array",
                    "description": "Custom sort order with patterns (supports wildcards like 'react-*', '@app/*', '*test*')",
                    "items": {
                      "type": "string",
                      "description": "Import pattern (exact match or wildcard pattern)"
                    },
                    "examples": [
                      [
                        "react",
                        "react-*",
                        "lodash"
                      ]
                    ]
                  }
                ]
              }
            },
            "required": [
              "name"
            ]
          }
        },
        "tidyjs.format.indent": {
          "type": "integer",
          "default": 4,
          "minimum": 0,
          "description": "Number of spaces for indentation in multiline imports"
        },
        "tidyjs.format.singleQuote": {
          "type": "boolean",
          "default": true,
          "description": "Use single quotes for import paths"
        },
        "tidyjs.format.bracketSpacing": {
          "type": "boolean",
          "default": true,
          "description": "Add spaces inside import brackets"
        },
        "tidyjs.format.removeUnusedImports": {
          "type": "boolean",
          "default": false,
          "description": "Remove unused imports during formatting"
        },
        "tidyjs.format.removeMissingModules": {
          "type": "boolean",
          "default": false,
          "description": "Remove imports for modules that are not installed"
        },
        "tidyjs.format.sortEnumMembers": {
          "type": "boolean",
          "default": false,
          "description": "Sort enum members by name length (shortest first)"
        },
        "tidyjs.format.sortExports": {
          "type": "boolean",
          "default": false,
          "description": "Sort export specifiers by name length (shortest first)"
        },
        "tidyjs.format.sortClassProperties": {
          "type": "boolean",
          "default": false,
          "description": "Sort class properties by name length (shortest first)"
        },
        "tidyjs.format.sortTypeMembers": {
          "type": "boolean",
          "default": false,
          "description": "Sort interface and type literal properties by name length (shortest first)"
        },
        "tidyjs.format.organizeReExports": {
          "type": "boolean",
          "default": false,
          "description": "Organize and format re-export statements (export { ... } from '...')"
        },
        "tidyjs.format.enforceNewlineAfterImports": {
          "type": "boolean",
          "default": true,
          "description": "Ensure exactly one blank line between the last import and the following code"
        },
        "tidyjs.format.blankLinesBetweenGroups": {
          "type": "integer",
          "default": 1,
          "minimum": 0,
          "description": "Number of blank lines between import groups"
        },
        "tidyjs.format.trailingComma": {
          "type": "string",
          "enum": ["always", "never"],
          "default": "never",
          "description": "Trailing comma on the last specifier in multiline imports"
        },
        "tidyjs.format.sortSpecifiers": {
          "oneOf": [
            { "type": "string", "enum": ["length", "alpha"] },
            { "type": "boolean", "enum": [false] }
          ],
          "default": "length",
          "description": "Sort import specifiers: 'length' by string length, 'alpha' alphabetically, false to preserve order"
        },
        "tidyjs.format.maxLineWidth": {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "description": "Maximum line width for imports (0 = disabled). Imports exceeding this wrap to multiline; multiline imports fitting within collapse to single-line."
        },
        "tidyjs.importOrder": {
          "type": "object",
          "default": {
            "sideEffect": 0,
            "default": 1,
            "named": 2,
            "typeOnly": 3
          },
          "description": "Order of import types within each group",
          "properties": {
            "sideEffect": {
              "type": "integer",
              "default": 0,
              "description": "Order for side-effect imports"
            },
            "default": {
              "type": "integer",
              "default": 1,
              "description": "Order for default imports"
            },
            "named": {
              "type": "integer",
              "default": 2,
              "description": "Order for named imports"
            },
            "typeOnly": {
              "type": "integer",
              "default": 3,
              "description": "Order for type-only imports"
            }
          }
        },
        "tidyjs.excludedFolders": {
          "type": "array",
          "default": [],
          "description": "List of folder paths where import formatting should be disabled",
          "items": {
            "type": "string",
            "description": "Folder path relative to workspace root (e.g., 'node_modules', 'dist', 'build')"
          }
        },
        "tidyjs.pathResolution.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic path resolution for imports"
        },
        "tidyjs.pathResolution.mode": {
          "type": "string",
          "enum": [
            "relative",
            "absolute"
          ],
          "default": "relative",
          "description": "Convert imports to relative or absolute (with aliases) paths"
        },
        "tidyjs.pathResolution.preferredAliases": {
          "type": "array",
          "default": [],
          "description": "Preferred aliases to use when converting to absolute paths",
          "items": {
            "type": "string",
            "description": "Alias pattern (e.g., '@components', '@utils', '@/*')"
          }
        },
        "tidyjs.pathResolution.aliases": {
          "type": "object",
          "default": {},
          "description": "Custom path aliases (tsconfig paths format). Override auto-detected tsconfig paths.",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "tidyjs.json",
        "url": "./tidyjs.schema.json"
      },
      {
        "fileMatch": ".tidyjsrc",
        "url": "./tidyjs.schema.json"
      }
    ]
  },
  "scripts": {
    "dev": "npm-run-all -p watch:*",
    "watch:esbuild": "node scripts/esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "test": "jest",
    "test:e2e": "node scripts/esbuild.mjs --production && tsc -p ./test/e2e/tsconfig.json && node ./out/test/e2e/test/e2e/runTest",
    "lint": "eslint --config eslint.config.mjs src test/parser",
    "check": "tsc --noEmit && npm run lint && npm run test",
    "build": "node scripts/esbuild.mjs --production && vsce package",
    "bump": "sh ./scripts/bump.sh"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.15",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.25.2",
    "eslint": "^9.21.0",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.6",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "oxc-parser": "^0.112.0"
  }
}
